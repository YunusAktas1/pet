# .env.example - Geliştirme ortamı için örnek yapılandırma
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# Uygulama
APP_NAME=PetMatch
ENV=development
DEBUG=True
API_V1_STR=/api/v1

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Veritabanı
# Geliştirme için:
DATABASE_URL=postgresql+psycopg2://petuser:petpass@localhost:5432/petmatch
# Docker için:
# DATABASE_URL=postgresql+psycopg2://petuser:petpass@db:5432/petmatch

# Loglama
LOG_LEVEL=info

# CORS
CORS_ALLOW_ORIGINS=["*"]
